{
    "name": "termul-ssh-client",
    "version": "0.1.0",
    "description": "WinSCP-like SSH client with file manager and terminal built with Electron and React",
    "main": "dist/main/main/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "npm run copy:workers && npm run build:preload && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on http://localhost:5273 && electron .",
        "build": "npm run build:renderer && npm run build:main && npm run copy:workers && npm run build:preload",
        "build:renderer": "vite build",
        "build:main": "tsc -p tsconfig.main.json",
        "copy:workers": "if not exist dist\\main\\workers mkdir dist\\main\\workers && copy src\\main\\workers\\*.js dist\\main\\workers\\",
        "build:preload": "tsc -p tsconfig.preload.json",
        "dist": "npm run build && npx electron-builder",
        "dist:win": "npm run build && npx electron-builder --win",
        "dist:win:nosign": "npm run build && npx electron-builder --win --publish=never",
        "dist:win:portable": "npm run build && npx electron-builder --win portable --publish=never",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "electron",
        "react",
        "ssh",
        "sftp",
        "terminal",
        "file-manager"
    ],
    "author": "Termul Team",
    "license": "MIT",
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.8",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/ssh2-sftp-client": "^9.0.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.56.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vite-plugin-electron": "^0.28.1",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.17",
        "@heroicons/react": "^2.0.18",
        "@tanstack/react-query": "^5.14.2",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/xterm": "^5.3.0",
        "better-sqlite3": "^9.6.0",
        "chokidar": "^3.5.3",
        "electron-store": "^8.1.0",
        "keytar": "^7.9.0",
        "node-pty": "1.0.0",
        "node-ssh": "^13.2.0",
        "react": "^18.2.0",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dom": "^18.2.0",
        "ssh2": "^1.14.0",
        "ssh2-sftp-client": "^9.1.0",
        "zod": "^3.22.4",
        "zustand": "^4.4.7"
    },
    "build": {
        "appId": "com.termul.ssh-client",
        "productName": "Termul SSH Client",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "src/main/workers/*.js",
            "node_modules/**/*"
        ],
        "nodeGypRebuild": false,
        "npmRebuild": false,
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "sign": null
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}